	public void insere(Cliente t) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void atualiza(Cliente t) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void remove(Cliente t) {
		// TODO Auto-generated method stub
		
	}

}
